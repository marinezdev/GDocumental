<!---MODAL Solicitud--->
<div class="modal fade" id="ModalCompartido" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" style="overflow-y: auto;">
    <div class="modal-dialog modal-xl" style="max-width:750px">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Solicitud de Documentos</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p>Seleccione si desea permitir la descarga de los siguientes documentos.</p>

                <div class="container-fluid">
                    <div class="row">
                        <!--SOLICITUDES -->
                        <div class="col-12" id="Solicitud">
                            <div class="card table-card">
                                <div class="p-15">
                                    <div class="table-responsive">
                                        <table id="TDocSolicitud" class="table table-hover" cursor: pointer">
                                            <thead>
                                                <tr>
                                                    <th>Nombre</th>
                                                    <th class="text-center">Solicitante</th>
                                                    <th class="text-center">Estado</th>
                                                    <th class="text-center">Fecha de solicitud</th>
                                                    <th class="text-center">Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in ViewBag.ListSolicitud)
                                                {
                                                    <tr style="background-color: 
                                                            @if (item.IdClasificacion == 1)
                                                            {
                                                                <text>rgba(255,205,86,0.2)</text> 
                                                            }
                                                            else if (item.IdClasificacion == 2)
                                                            {
                                                                <text>hsla(120, 100%, 25%, 0.5)</text>
                                                            }
                                                            else if (item.IdClasificacion == 3)
                                                            {
                                                                <text>hsla(0, 100%, 50%, 0.5)</text>                                                            }
                                                            else
                                                            {
                                                                <text>white</text>
                                                            };" data-id="@item.Id">
                                                        <td><i class="fa fa-file-text-o"></i>&nbsp;&nbsp;<a>@item.Nombre</a></td>
                                                        <td class="text-center">@item.Elaboro</td>
                                                        <td class="text-center estadocolumna">@item.Estatus</td>
                                                        <td class="text-center">@item.FechaPublicacion</td>
                                                        <td class="text-center"><a onclick="Aceptar(@item.Id);"><i class="fa fa-check-square-o f-20" aria-hidden="true"></i></a>&nbsp;&nbsp;&nbsp;<a onclick="Negar(@item.Id);"><i class="fa fa-times-circle-o f-20" aria-hidden="true"></i></a></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" id="BtncloseCompartir" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>


