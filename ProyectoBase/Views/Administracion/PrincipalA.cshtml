            }
        });
        $('#TDocSolicitud').DataTable({

            pageLength: 5,
            lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'Todas']],
            language: {
                url: '//cdn.datatables.net/plug-ins/1.12.1/i18n/es-MX.json'
            }
        });
    });

    $('#IdMenuDashboard').addClass("active");

    function VDocVigente() {
        $("#DocVigente").css("display", "block");
    }
    function VDocVencido() {
        $("#DocVencido").css("display", "block");
    }

    function ModalSolicitud() {
        $('#ModalCompartido').modal('show');
    }

    function Aceptar(Id) {
        var obj = {};
        obj['Id'] = Id;

        var jsonObject = {
            "Documento": obj
        };

        $.ajax({
            url: "@Url.Action("SolicitudAceptar", "Administracion")",
            data: JSON.stringify(jsonObject),
            type: "POST",
            contentType: "application/json",
            dataType: "json",
            success: function (resultado) {
                if (resultado.Id == 1) {
                    swal({
                        title: "Permiso concedido",
                        text: "Se otorgaron permisos satisfactoriamente",
                        icon: "success",
                        button: "Aceptar",
                        target: document.getElementById('ModalCompartido')
                    });

                    var fila = document.querySelector("tr[data-id='" + Id + "']");
                    fila.style.backgroundColor = "hsla(120, 100%, 25%, 0.5)";

                    // Cambiar el texto de la columna Estado
                    var columnaEstado = fila.querySelector(".text-center.estadocolumna");
                    columnaEstado.innerText = "Aprobada";

                } else {
                    alert('Intente más tarde');
                }
            }
        });


    }
    function Negar(Id) {
        var obj = {};
        obj['Id'] = Id;

        var jsonObject = {
            "Documento": obj
        };

        $.ajax({
            url: "@Url.Action("SolicitudNegar", "Administracion")",
            data: JSON.stringify(jsonObject),
            type: "POST",
            contentType: "application/json",
            dataType: "json",
            success: function (resultado) {
                if (resultado.Id == 1) {
                    swal({
                        title: "Permiso Denegado",
                        text: "El usuario no tendra acceso a la descarga",
                        icon: "success",
                        button: "Aceptar",
                        target: document.getElementById('ModalCompartido')
                    });

                    var fila = document.querySelector("tr[data-id='" + Id + "']");
                    fila.style.backgroundColor = "hsla(0, 100%, 50%, 0.5)";

                    // Cambiar el texto de la columna Estado
                    var columnaEstado = fila.querySelector(".text-center.estadocolumna");
                    columnaEstado.innerText = "Negada";
                } else {
                    alert('Intente mas tarde')
                }
            }
        });
    }
</script>
