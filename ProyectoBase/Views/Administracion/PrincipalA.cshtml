<script>

    $(document).ready(function () {
        var counter = parseInt($('#counter').text());

        if (counter > 0) {
            $('#gif-icon').addClass('block');
        } else {
            $('#gif-icon').removeClass('block');
        }



    });

        var data = [{
      data: [@ViewBag.Visto ,@ViewBag.NVisto],

            backgroundColor: [
                "rgba(75,192,192,0.2)",
                "rgba(255,205,86,0.2)"

            ],
            borderColor: [
                "rgba(75,192,192,1)",
                "rgba(255,205,86,1)"
            ]
        }];
        var options = {
      tooltips: {
        enabled: true
      },
      plugins: {
        datalabels: {
          formatter: (value, ctx) => {

            let sum = ctx.dataset._meta[0].total;
            let percentage = (value * 100 / sum).toFixed(0) + "%";
            return percentage;


          },
              color: '#000000',
        }
      }
        };
        var ctx = document.getElementById("pie-chart").getContext('2d');
        var myChart = new Chart(ctx, {
        type: 'pie',
      data: {
      labels: ['Vistos', 'Pendientes'],
        datasets: data
      },
      options: options
});
</script>

<script>
    $(document).ready(function () {
        $('#TDocVigente').DataTable({

            pageLength: 5,
            lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'Todas']],
            language: {
                url: '//cdn.datatables.net/plug-ins/1.12.1/i18n/es-MX.json'
            }
        });

        $('#TDocVencido').DataTable({
            pageLength: 5,
            lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'Todas']],
            language: {
